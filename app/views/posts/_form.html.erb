<div class="section">
  <%= simple_form_for @post do |f| %>
    <div class="field">

      <h1 class="subtitle">Title</h1>
      <%= f.input :title,
      label: false,
      input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
    
      <h1 class="subtitle">Content</h1>
          <%= f.input :content,
          label: false,
          input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
      </div>

      <%= f.button :submit, class: "button is-primary" %>
    <%end%>
</div>

